{
  "build": {
    "beforeBuildCommand": "cd ../Ledgerly.Web && npm run build",
    "beforeDevCommand": "cd ../Ledgerly.Web && npm run start",
    "devPath": "http://localhost:4200",
    "distDir": "../../Ledgerly.Web/dist/ledgerly-web/browser"
  },
  "package": {
    "productName": "Ledgerly",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "scope": ["$APPDATA/*", "$HOME/*"]
      },
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": true,
        "open": false,
        "scope": [
          {
            "name": "hledger",
            "cmd": "hledger",
            "args": true
          },
          {
            "name": "test-echo",
            "cmd": "echo",
            "args": true
          }
        ]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Ledgerly",
        "width": 800
      }
    ]
  }
}
